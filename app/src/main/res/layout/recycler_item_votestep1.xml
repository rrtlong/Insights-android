<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_weight="3"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_coins_selected" />

        <TextView
            android:id="@+id/name_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/logo"
            android:text="BTC"
            android:textColor="@color/text_short_name"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name_short"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="binance"
            android:textColor="@color/text_name"
            android:textSize="8sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:gravity="center"
        android:text="2018.4.1 10:00~2018.4.1 10:10"
        android:textColor="@color/text_short_name"
        android:textSize="11sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/reward"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="center"
        android:text="100INB"
        android:textColor="@color/c_ff6d3b"
        android:textSize="11sp"
        android:textStyle="bold" />


</LinearLayout>