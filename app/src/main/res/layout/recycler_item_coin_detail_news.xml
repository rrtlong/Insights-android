<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@color/white"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/cover"
        android:text="立场180度大转弯！发过监管机构将立法使ICO合法化"
        android:textColor="@color/c_333333"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/cover"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1天前"
            android:textColor="@color/cccccc"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="·Earthshaker"
            android:textColor="@color/cccccc"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/readers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,658人阅读"
            android:textColor="@color/cccccc"
            android:textSize="8sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="113dp"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/default_news_cover"
        android:scaleType="centerCrop" />
</RelativeLayout>