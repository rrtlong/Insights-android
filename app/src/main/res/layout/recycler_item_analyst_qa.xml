<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/default_head" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/cover"
            android:text="程不会"
            android:textColor="@color/text_short_name"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cover"
            android:text="一小时前"
            android:textColor="@color/c_7b7b7b"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/follow"
            android:layout_width="47dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/stroke_solid_72d2d6"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:gravity="left"
        android:text="这道题我也不会这道题我也不会这道题我也不会这道题我也不会这道题我也不会"
        android:textColor="@color/text_short_name"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/answered_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/f1f1f1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/reply_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关不住:"
            android:gravity="top"
            android:textColor="@color/colorPrimary"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginLeft="5dp"
            android:text="这道题我也不会这道题我也不会这道题我也不会这道题我也不会这道题我也不会这道题我也不会这道题我也不会这道题我也不会这道题我也不会这道题我也不会"
            android:textColor="@color/c_7b7b7b"
            android:textSize="9sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/no_answer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/no_answer_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_answer" />

            <TextView
                android:id="@+id/answer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回答"
                android:textColor="@color/colorPrimary"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>