<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:layout_weight="2.9"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_coins_selected" />

        <TextView
            android:id="@+id/name_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/logo"
            android:text="BTC"
            android:textColor="@color/text_short_name"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name_short"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="binance"
            android:textColor="@color/text_name"
            android:textSize="8sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="距开始3天"
        android:textColor="@color/text_short_name"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="51,921.47"
        android:textColor="@color/text_short_name"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="1000个"
        android:textColor="@color/text_short_name"
        android:textSize="11sp" />


</LinearLayout>