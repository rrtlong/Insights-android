<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_weight="4"
    android:orientation="horizontal"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/num"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/c_333333"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/num"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_coins_selected" />

        <TextView
            android:id="@+id/name_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/logo"
            android:text="BTC"
            android:textColor="@color/text_short_name"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name_short"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="binance"
            android:textColor="@color/text_name"
            android:textSize="8sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/market_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="51,921233.47"
        android:textColor="@color/text_short_name"
        android:textSize="11sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="51,921.47"
            android:textColor="@color/text_short_name"
            android:textSize="11sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exchange_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="=530.19"
                android:textColor="@color/text_name"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/for_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="USDT"
                android:textColor="@color/text_name"
                android:textSize="8sp" />
        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/range"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:background="@drawable/stroke_5ab67d"
            android:gravity="center"
            android:text="+6.32%"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>