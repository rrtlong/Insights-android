<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f1f1f1"
    android:orientation="vertical">

    <com.imalljoy.insightdemo.widgets.TopBarCommon
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.imalljoy.insightdemo.widgets.TopBarCommon>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="分数"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/score"
            android:layout_width="67dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/stroke_1_cccccc"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:hint="(0-100)"
            android:textColor="#7b7b7b"
            android:textSize="11sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:text="描述:"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/score_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_radius_5dp"
            android:gravity="left|top"
            android:hint="请输入评价依据!"
            android:minHeight="267dp"
            android:textColor="#7b7b7b"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>