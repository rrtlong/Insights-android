<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imalljoy.insights">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/TranslucentTheme">
        <activity android:name=".mvps.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvps.research.BuildRequestActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".mvps.research.EditType1Activity"
            android:configChanges="orientation|keyboard" />
        <activity
            android:name=".mvps.research.BuildReportActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name=".mvps.research.BuildCoinLevelActivity" />
        <activity android:name=".mvps.research.BuildCoinInfoActivity" />
        <activity android:name=".mvps.research.EnterpriseActivity" />
        <activity android:name=".mvps.research.UserListActivity" />
        <activity
            android:name=".mvps.research.BuildQuestionnaireActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".mvps.research.BuildQuestionActivity"/>
        <activity android:name=".mvps.research.TotalPieListActivity"/>
    </application>

</manifest>